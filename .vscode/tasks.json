{
    "version": "2.0.0",
    
    "tasks": [
        {
            "label": "sweetpad: launcher",
            "type": "sweetpad",
            "action": "launch",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$sweetpad-watch",
                "$sweetpad-xcodebuild-default",
                "$sweetpad-xcbeautify-errors",
                "$sweetpad-xcbeautify-warnings"
            ],
            "detail": "Build and Launch the app",
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "sweetpad: test",
            "type": "sweetpad",
            "action": "test",
            "scheme": "Calories",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$sweetpad-watch",
                "$sweetpad-xcodebuild-default",
                "$sweetpad-xcbeautify-errors",
                "$sweetpad-xcbeautify-warnings"
            ],
            "detail": "Test the app",
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "xcrun xcodebuild test -scheme Calories -destination 'platform=iOS Simulator,name=iPhone 17' -testPlan 'CaloriesTestPlan-all' | xcpretty",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "xcrun xcodebuild test -scheme Calories -destination 'platform=iOS Simulator,name=iPhone 17' -testPlan 'CaloriesTestPlan-unit' | xcpretty",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "type": "sweetpad",
            "action": "debugging-run",
            "problemMatcher": [
                "$sweetpad-watch",
                "$sweetpad-xcodebuild-default",
                "$sweetpad-xcbeautify-errors",
                "$sweetpad-xcbeautify-warnings"
            ],
            "label": "sweetpad: debugging-run",
            "detail": "Run the app (for debugging)"
        },
        {
            "type": "sweetpad",
            "action": "build",
            "problemMatcher": [
                "$sweetpad-watch",
                "$sweetpad-xcodebuild-default",
                "$sweetpad-xcbeautify-errors",
                "$sweetpad-xcbeautify-warnings"
            ],
            "label": "sweetpad: build",
            "detail": "Build the app",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
} 